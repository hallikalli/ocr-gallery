    <style name="Theme.OcrGallery" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/black_rock</item>
        <item name="colorPrimaryVariant">@color/black_rock</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorAccent">@color/white</item>
        <item name="colorControlHighlight">@color/black_rock</item>
